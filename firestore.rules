rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Bakery data - organized by bakery ID
    match /bakeries/{bakeryId} {
      // For development, allow read/write to all bakery data
      // TODO: Add proper authentication in production
      allow read, write: if true;
      
      // Daily entries subcollection
      match /daily_entries/{entryId} {
        allow read, write: if true;
      }
      
      // Weekly expenses subcollection
      match /weekly_expenses/{expenseId} {
        allow read, write: if true;
      }
      
      // Config subcollection
      match /config/{configId} {
        allow read, write: if true;
      }
    }
    
    // Expense categories - read-only global data
    match /expense_categories/{categoryId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Products - read-only global data
    match /products/{productId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
